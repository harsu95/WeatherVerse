<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_glass_panel"
    android:layout_marginBottom="12dp">

    <!-- Severity Indicator -->
    <View
        android:id="@+id/alert_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/uv_color" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heat Advisory"
            android:textColor="@color/text_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="High temperatures expected..."
            android:textColor="@color/text_secondary_dark"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_valid_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Active until 8:00 PM"
            android:textColor="@color/primary"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
